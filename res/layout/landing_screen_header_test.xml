<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/QR_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="40dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/includer_group"
        android:src="@drawable/image_qr_code" />


    <include
        android:id="@+id/includer_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/includer_scan"
        layout="@layout/includer_group_list" />

    <include
        android:id="@+id/includer_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        layout="@layout/includer_scan_list" />

</RelativeLayout>