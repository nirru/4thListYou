<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/app_background">

            <RelativeLayout
                android:id="@+id/relative_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:visibility="invisible" />


                <ImageView
                    android:id="@+id/user_profile_pic"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:tag="1"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_profile_pic" />

                <ProgressBar
                    android:id="@+id/progress_bar_one"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView2"
                    android:background="@drawable/circle_shape"
                    android:indeterminate="false"
                    android:max="100"
                    android:progressDrawable="@drawable/circular_progress_bar" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/user_profile_pic"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/user_profile_pic"
                    android:layout_toRightOf="@+id/user_profile_pic"
                    android:text="Amelia"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/designation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_name"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:layout_toEndOf="@+id/user_profile_pic"
                    android:layout_toRightOf="@+id/user_profile_pic"
                    android:text="Android Developer"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/designation"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/user_profile_pic"
                    android:layout_toRightOf="@+id/user_profile_pic"
                    android:text="Accelor technology servicesfdfddfdf"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/company"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/user_profile_pic"
                    android:layout_toRightOf="@+id/user_profile_pic"
                    android:text="@string/self_user"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/divider_one"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/user_profile_pic"
                    android:layout_marginTop="10dp"
                    android:background="@color/fragement_list_divider" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider_one"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:maxLength="141"
                    android:text="Hey there!! i am using ListYou"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/divider_two"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/status"
                    android:layout_marginTop="5dp"
                    android:background="@color/fragement_list_divider" />

                <RelativeLayout
                    android:id="@+id/relative_abc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider_two"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="15dp">

                    <RelativeLayout
                        android:id="@+id/rel_layout_left"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true">

                        <ImageView
                            android:id="@+id/chat_bg_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/chat_bg"/>

                        <ImageView
                            android:id="@+id/chat_icon_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/share_my_contact"/>

                        <TextView
                            android:id="@+id/share_my_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/chat_icon_id"
                            android:text="@string/share_my_qr_code"
                            android:gravity="center"
                            android:layout_marginTop="1dp"
                            android:textColor="#404042"
                            android:textSize="8dp"/>

                        </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/share_relative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/rel_layout_left"
                        android:layout_toLeftOf="@+id/rel_layout_right"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/share_bg_id"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/chat_bg"/>

                        <ImageView
                            android:id="@+id/friends_qr_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="2"
                            android:layout_centerInParent="true"
                            android:visibility="gone"
                            android:src="@drawable/chat_bg"/>




                        <TextView
                            android:id="@+id/account_seeting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="@string/self_account_setting"
                            android:layout_marginTop="1dp"
                            android:gravity="center"
                            android:textColor="#404042"
                            android:textSize="10dp"/>
                        </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_layout_right"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true" >

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/decline_bg" />


                        <TextView
                            android:id="@+id/profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_below="@+id/imageView9"
                            android:text="@string/profile_popup"
                            android:textColor="@android:color/white"
                            android:textSize="10dp" />
                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/added_user_date_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative_abc"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:text="@string/profile_user_add_date"
                    android:textColor="#242c3d" />

                <TextView
                    android:id="@+id/divider_three"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/added_user_date_info"
                    android:layout_marginTop="5dp"
                    android:background="@color/fragement_list_divider" />

                <TextView
                    android:id="@+id/profile_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider_three"
                    android:text="@string/self_user_status"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp" />

                <EditText
                    android:id="@+id/type_your_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="90dp"
                    android:layout_below="@+id/profile_status"
                    android:layout_marginTop="10dp"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/round_corner_edittext"
                    android:hint="@string/type_your_status"
                    android:textColor="#242c3d" />

                <TextView
                    android:id="@+id/save_status"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/type_your_status"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="#242c3d"
                    android:text="@string/self_save_status"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/xys"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/save_status"
                    android:text="TextView"
                    android:visibility="invisible" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/cross_button_xy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/button_cross" />

        <ImageView
            android:id="@+id/cross_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/D:/StudioWorkspace/AppListYou/res/layout/self_profile_popup.xml -->