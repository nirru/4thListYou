<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/save"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.65">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/img_profile_pic"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/icon_capture"
                                android:tag="1" />

                            <ProgressBar
                                android:id="@+id/progressBar1"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/circle_shape"
                                android:indeterminate="false"
                                android:max="100"
                                android:progressDrawable="@drawable/circular_progress_bar" />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="1.35">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="3">

                                <EditText
                                    android:id="@+id/first_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.45"
                                    android:background="@drawable/edit_box_seven"
                                    android:ems="10"
                                    android:gravity="center_vertical|left"
                                    android:hint="@string/james"
                                    android:singleLine="true"
                                    android:textColor="@color/edit_profile_all_edit_text_color"></EditText>

                                <EditText
                                    android:id="@+id/editText2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.10"
                                    android:ems="10"
                                    android:visibility="invisible" />

                                <EditText
                                    android:id="@+id/last_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.45"
                                    android:background="@drawable/edit_box_seven"
                                    android:ems="10"
                                    android:hint="@string/decarpi"
                                    android:singleLine="true"
                                    android:textColor="@color/edit_profile_all_edit_text_color" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:text="@string/enter_your_name_in_any_language" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp">

                                <EditText
                                    android:id="@+id/first_name_in_another_language"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.45"
                                    android:background="@drawable/edit_box_seven"
                                    android:ems="10"
                                    android:hint="@string/hint_first_name"
                                    android:singleLine="true"
                                    android:textColor="@color/edit_profile_all_edit_text_color" />

                                <EditText
                                    android:id="@+id/edittext3"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.1"
                                    android:ems="10"
                                    android:visibility="invisible" />

                                <EditText
                                    android:id="@+id/last_name_in_another_language"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.45"
                                    android:background="@drawable/edit_box_seven"
                                    android:ems="10"
                                    android:hint="@string/hint_last_name"
                                    android:singleLine="true"
                                    android:textColor="@color/edit_profile_all_edit_text_color" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/edit_profile_line_color"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="left|center"
                    android:text="@string/text_label_one"
                    android:textColor="@color/edit_profile_text_color"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="left|center"
                    android:text="@string/text_label_two"
                    android:textColor="@color/edit_profile_text_color"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="left|center"
                    android:text="@string/text_label_three"
                    android:textColor="@color/edit_profile_text_color"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_box_four"
                    android:ems="10"
                    android:hint="@string/hint_title"
                    android:singleLine="true"
                    android:textColor="@color/edit_profile_all_edit_text_color"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_box_four"
                    android:hint="@string/hint_company_name"
                    android:singleLine="true"
                    android:textColor="@color/edit_profile_all_edit_text_color"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/company_logo_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="@string/hint_company_logo"
                        android:textColor="@color/company_logo_text_view_text_color" />

                    <RelativeLayout
                        android:id="@+id/com_logo_relative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/company_logo_text_view">

                        <ImageView
                            android:id="@+id/img_company_logo_pic"
                            android:layout_width="100dp"
                            android:layout_height="55dp"
                            android:layout_centerInParent="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/company_logo"
                            android:tag="2" />

                        <ProgressBar
                            android:id="@+id/progressBar2"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/circle_shape"
                            android:indeterminate="false"
                            android:max="100"
                            android:progressDrawable="@drawable/circular_progress_bar" />


                    </RelativeLayout>
                </RelativeLayout>

                <EditText
                    android:id="@+id/company_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_box_four"
                    android:ems="10"
                    android:hint="@string/hint_company_email"
                    android:singleLine="true"
                    android:textColor="@color/edit_profile_all_edit_text_color"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/company_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_box_four"
                    android:editable="false"
                    android:ems="10"
                    android:hint="@string/hint_country"
                    android:singleLine="true"
                    android:textColor="@color/edit_profile_all_edit_text_color"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/company_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_box_four"
                    android:ems="10"
                    android:hint="@string/hint_city"
                    android:singleLine="true"
                    android:textColor="@color/edit_profile_all_edit_text_color"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/country_code"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/edit_box_five"
                        android:ems="10"
                        android:hint="@string/hint_code"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/edit_profile_all_edit_text_color" />

                    <EditText
                        android:id="@+id/mobile_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/country_code"
                        android:background="@drawable/edit_box_four"
                        android:ems="10"
                        android:hint="@string/hint_mobile_number"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/edit_profile_all_edit_text_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/fax_code"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/edit_box_five"
                        android:ems="10"
                        android:hint="@string/hint_code"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/edit_profile_all_edit_text_color" />

                    <EditText
                        android:id="@+id/fax_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/fax_code"
                        android:background="@drawable/edit_box_four"
                        android:ems="10"
                        android:hint="@string/hint_fax_number"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/edit_profile_all_edit_text_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/telephone_code"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/edit_box_five"
                        android:ems="10"
                        android:hint="@string/hint_code"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/edit_profile_all_edit_text_color" />

                    <EditText
                        android:id="@+id/telephone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/telephone_code"
                        android:background="@drawable/edit_box_four"
                        android:ems="10"
                        android:hint="@string/hint_phone_number"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/edit_profile_all_edit_text_color" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_box_four"
                    android:ems="10"
                    android:hint="@string/hint_address"
                    android:singleLine="true"
                    android:textColor="@color/edit_profile_all_edit_text_color"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_box_four"
                    android:ems="10"
                    android:hint="@string/hint_website"
                    android:singleLine="true"
                    android:textColor="@color/edit_profile_all_edit_text_color"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/skype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_box_four"
                    android:ems="10"
                    android:hint="@string/hint_skype"
                    android:singleLine="true"
                    android:textColor="@color/edit_profile_all_edit_text_color"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/listyou_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_box_four"
                    android:ems="10"
                    android:hint="@string/hint_list_you_id"
                    android:singleLine="true"
                    android:textColor="@color/edit_profile_all_edit_text_color"
                    android:visibility="visible" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/business_logo_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="@string/Business_card"
                        android:textColor="@color/company_logo_text_view_text_color" />

                    <RelativeLayout
                        android:id="@+id/bussiness_logo_relative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/business_logo_text_view">

                        <ImageView
                            android:id="@+id/img_bussiness_logo_pic"
                            android:layout_width="150dp"
                            android:layout_height="70dp"
                            android:layout_centerInParent="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/business_logo_pic"
                            android:tag="3" />

                        <ProgressBar
                            android:id="@+id/progressBar3"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/circle_shape"
                            android:indeterminate="false"
                            android:max="100"
                            android:progressDrawable="@drawable/circular_progress_bar"/>


                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/save"
            android:text="@string/save_button"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/D:/StudioWorkspace/AppListYou/res/layout/login_activity_profile_edit.xml -->